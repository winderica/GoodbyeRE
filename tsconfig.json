{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules"
  ]
}
